root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Config for shfmt
[*.sh]
indent_style = space
indent_size = 4

shell_variant = bash
space_redirects = false
keep_padding = true
function_next_line = false

# Ignore generated files
[bin/**]
ignore =  true
